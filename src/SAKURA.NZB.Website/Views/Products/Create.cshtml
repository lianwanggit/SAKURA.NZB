@model SAKURA.NZB.Domain.Product

@{
    ViewData["Title"] = "Create";
    var categories = (IEnumerable<SelectListItem>)ViewData["CategoryId"];
    var suppliers = (IEnumerable<SelectListItem>)ViewData["SupplierId"];
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Category" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="CategoryId" asp-items="categories" class ="form-control"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Quotes" class="col-md-2 control-label"></label>
            
            <div class="col-md-10">
                <div class="input-group">
                    <div class="input-group-btn">
                        <select asp-for="Quotes[0]" asp-items="suppliers" class="form-control"
                                style="width: 180px"></select>
                    </div>
                    <span class="input-group-addon">$</span>
                    <input asp-for="Quotes[0].Price" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Desc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Desc" class="form-control" rows="5" ></textarea>
                <span asp-validation-for="Desc" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
