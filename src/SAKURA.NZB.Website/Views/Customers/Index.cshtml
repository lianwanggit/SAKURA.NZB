@model IEnumerable<SAKURA.NZB.Domain.Customer>

@{
    ViewData["Title"] = "Customer";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">创建客户</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Phone1)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>     
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Phone1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">编辑</a> |
            <a asp-action="Details" asp-route-id="@item.Id">查看</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">删除</a>
        </td>
    </tr>
}
</table>
